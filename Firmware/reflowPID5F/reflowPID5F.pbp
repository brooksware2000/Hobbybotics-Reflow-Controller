'Set PORTB to input
TRISB=%11111111

'-------------------------------------------------------------------------------
'  Instant Interrupts Elapsed Timer routine
'-------------------------------------------------------------------------------

ASM
INT_LIST  macro      ;IntSource,  Label,        Type, ResetFlag?
        INT_Handler   TMR1_INT,  _ClockCount,   PBP,  yes
    endm
    ;Creates the interrupt processor
