        ENDIF
        
        'Decrease value button
        IF (SW2 = 0) THEN
            WHILE (SW2 = 0) : WEND
            PAUSE 50
            
            IF (value <= minVal) THEN
                value = minVal
            ELSE
                value = value - 1
            ENDIF
            GOSUB SET_CURSOR : LCDOUT DEC4 value : GOSUB SET_CURSOR
        ENDIF  
     WEND
     position = 95
     GOSUB SET_CURSOR
    
     PAUSE 300

     GOSUB BUTTON_PRESS
